<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wenjie.mediaplayerdm">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LocalMediasActivity" />
        <activity
            android:name=".Mp4Activity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.mPlay" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".onLineViedio.OnLinePlayActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">

        </activity>
        <activity
            android:name=".PhiFind.RecommendVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"></activity>

        <activity android:name=".netDm.VideoSurfaceDemo" />
        <activity android:name=".apiGuide.LiveCameraActivity" />
        <activity android:name=".netDm.TextureViewMediaDmActivity" />
    </application>


    <!--  android:configChanges="orientation|screenSize|keyboardHidden"-->

</manifest>